# .env.clickhouse.example
# نمونه فایل محیطی برای تنظیمات ClickHouse Analytics

# ================================================================
# PostgreSQL Configuration (Source Database)
# ================================================================
PG_HOST=postgres-source
PG_PORT=5432
PG_DATABASE=crypto_exchange
PG_USER=exchange_admin
PG_PASSWORD=Exchange2024Secure!

# ================================================================
# ClickHouse Configuration (Analytics Database)
# ================================================================
CH_HOST=clickhouse
CH_PORT=9000
CH_HTTP_PORT=8123
CH_DATABASE=crypto_analytics
CH_USER=analytics_user
CH_PASSWORD=ClickHouse2024!

# ================================================================
# Sync Service Configuration
# ================================================================
SYNC_INTERVAL=60  # Sync interval in seconds
BATCH_SIZE=1000   # Number of records per batch

# ================================================================
# Resource Limits (Docker)
# ================================================================
CLICKHOUSE_MEMORY_LIMIT=8G
POSTGRES_MEMORY_LIMIT=1G
SYNC_MEMORY_LIMIT=512M

# ================================================================
# Ports (برای تغییر در صورت تداخل)
# ================================================================
POSTGRES_EXTERNAL_PORT=5434
CLICKHOUSE_HTTP_EXTERNAL_PORT=8123
CLICKHOUSE_NATIVE_EXTERNAL_PORT=9000
CLICKHOUSE_UI_PORT=8124

# ================================================================
# Development Settings (اختیاری)
# ================================================================
LOG_LEVEL=INFO
DEBUG_MODE=false

# ================================================================
# IMPORTANT SECURITY NOTES:
# ================================================================
# 1. این فایل رو NEVER به git کامیت نکنید
# 2. قبل از production حتماً پسوردها رو تغییر بدید
# 3. از پسوردهای قوی استفاده کنید
# 4. این فایل رو کپی کنید به .env و مقادیر رو customize کنید:
#    cp .env.clickhouse.example .env.clickhouse